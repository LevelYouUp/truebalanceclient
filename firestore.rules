rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow Cloud Functions to create user documents during registration
      allow create: if request.auth != null || 
                       (request.auth == null && 
                        resource == null && 
                        request.resource.data.keys().hasAll(['adminId', 'active', 'registrationDate']));
    }
    
    // Admins collection - NO direct client access
    // Only Cloud Functions can read this collection
    match /admins/{adminId} {
      allow read, write: if false; // Block all direct client access
    }
    
    // Other collections - require authentication
    match /plans/{planId} {
      allow read: if request.auth != null;
    }
    
    match /exercises/{exerciseId} {
      allow read: if request.auth != null;
    }
    
    match /exercise_check_ins/{checkInId} {
      allow read, write: if request.auth != null;
    }
    
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Block everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
